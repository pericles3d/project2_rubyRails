
<%= form_tag ticket_path do %>
  <table class="table table-hover table-condensed">
    <caption>Group Stage</caption>
    <thead>
    </thead>
    <tbody>
      <% @userMatches.each do |m| %>
        <tr>
          <th scope="row"><%= m.match.id %></th>
          <td><%= m.match.matchday.strftime("%a %b %d, %Y %H:%M") %> </td>
          <td><%= m.match.teams.first.name %> </td>
          <td><%= image_tag m.match.teams.first.flag, size: "38x26" %></td>
          <td>
            <div class="field">
              <%= text_field "match#{[m.match.id]}", m.match.teams.first.id %> X <%= text_field "match#{[m.match.id]}", m.match.teams.last.id %>
            </div>
          </td>
          <td><%= image_tag m.match.teams.last.flag, size: "38x26"%></td>
          <td><%= m.match.teams.last.name %></td>
          <td><%= m.match.city %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%# link_to "Submit ticket", ticket_path, method: :post, class: "btn btn-default" %>
  <%= submit_tag "Submit ticket"%>
<% end %>
